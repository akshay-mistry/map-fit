<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.mapfitapp.AccountCreationActivity">

    <EditText
        android:id="@+id/passwordTextCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/catamaran_medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#289DD6"
        android:textColorHighlight="#289DD6"
        android:textColorHint="#289DD6"
        android:textColorLink="#289DD6"
        app:layout_constraintEnd_toEndOf="@+id/emailTextCreate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailTextCreate"
        app:layout_constraintTop_toBottomOf="@+id/emailTextCreate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/days_one"
        android:text="Account Creation"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/emailTextCreate"
        app:layout_constraintEnd_toEndOf="@+id/emailTextCreate"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/emailTextCreate"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/emailTextCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:fontFamily="@font/catamaran_medium"
        android:hint="Set email"
        android:inputType="textPersonName"
        android:textColor="#289dd6"
        android:textColorHighlight="#289DD6"
        android:textColorHint="#289DD6"
        android:textColorLink="#289DD6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mapfitlogo" />

    <Button
        android:id="@+id/accountButCreate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="256dp"
        android:background="#289DD6"
        android:fontFamily="@font/catamaran_semibold"
        android:text="Create Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passwordTextCreate"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/passwordTextCreate"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextCreate"
        app:layout_constraintVertical_bias="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>